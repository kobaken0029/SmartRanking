<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    style="@style/MyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#97d4d9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/idol_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mmrn" />

        <ImageView
            android:id="@+id/ranking"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/idol_image"
            android:src="@drawable/ic_looks_one_black_24dp" />

        <!--<ImageView-->
            <!--android:id="@+id/vote"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_below="@id/idol_image"-->
            <!--android:onClick="vote"-->
            <!--android:src="@drawable/ic_elections" />-->

        <TextView
            android:id="@+id/num_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idol_image"
            android:layout_toStartOf="@id/vote"
            android:gravity="end"
            android:text="120票" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/badge_image"
            android:text="三森すずこ"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/badge_image"
            android:text="声優界のレインメーカー！\nみもりんっ！大好きっ！"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>